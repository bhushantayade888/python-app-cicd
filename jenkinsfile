pipeline {
    agent any

    environment {
        SSH_CRED = 'node-app-key'
        SERVER_IP = '3.21.207.226'
        REMOTE_USER = 'ubuntu'
        APP_DIR = '/home/ubuntu/pythonapp'
        REPO_URL = 'https://github.com/bhushantayade888/python-app-cicd.git'
        BRANCH = 'main'
    }

    stages {

        stage('Deploy to Server') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                        
                        # Install packages only if not installed
                        if ! command -v python3-venv >/dev/null 2>&1; then
                            sudo apt update
                            sudo apt install -y python3-venv python3-pip git
                        fi

                        # Clone repo if first time
                        if [ ! -d "${APP_DIR}" ]; then
                            git clone -b ${BRANCH} ${REPO_URL} ${APP_DIR}
                        else
                            cd ${APP_DIR}
                            git pull origin ${BRANCH}
                        fi

                        cd ${APP_DIR}

                        # Create virtual environment only if not exists
                        if [ ! -d "venv" ]; then
                            python3 -m venv venv
                        fi

                        source venv/bin/activate

                        pip install --upgrade pip
                        pip install -r requirements.txt

                        # Kill old app if running
                        pkill -f app.py || true

                        # Run app in background
                        nohup python3 app.py --host=0.0.0.0 > app.log 2>&1 &

                        echo "Deployment Successful ðŸš€"
                    '
                    """
                }
            }
        }
    }
}
