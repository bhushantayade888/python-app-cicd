pipeline {
    agent any

    environment {
        SSH_CRED   = 'ubuntu'
        SERVER_IP  = '172.31.18.59'
        REMOTE_USER = 'ubuntu'
        APP_DIR    = '/home/ubuntu/pythonapp'
    }

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/bhushantayade888/python-app-cicd.git'
            }
        }

        stage('Deploy Code to EC2') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "mkdir -p ${APP_DIR}"
                        scp -o StrictHostKeyChecking=no -r * ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
                    """
                }
            }
        }

        stage('Install Dependencies & Start App') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} << EOF
                        sudo apt update -y
                        sudo apt install -y python3-venv python3-pip

                        cd ${APP_DIR}

                        python3 -m venv venv
                        source venv/bin/activate

                        pip install --upgrade pip
                        pip install -r requirements.txt

                        # Kill old process if running
                        pkill -f gunicorn || true

                        # Start app using gunicorn
                        nohup gunicorn --bind 0.0.0.0:5000 app:app > app.log 2>&1 &

                        exit
                        EOF
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Deployment Successful üöÄ"
        }
        failure {
            echo "Deployment Failed ‚ùå"
        }
    }
}
